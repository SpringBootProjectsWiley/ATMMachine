<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">
      <bean id="savings" class="SavingsAccount" scope="prototype">
      	<constructor-arg index="0" value="123"></constructor-arg>
      	<constructor-arg index="1" value="rohit"></constructor-arg>
      	<constructor-arg index="2" value="400000"></constructor-arg>
      </bean>
      <bean id="salary" class="SalaryAccount" scope="prototype">
      	<constructor-arg index="0" value="456"></constructor-arg>
      	<constructor-arg index="1" value="omkar"></constructor-arg>
      	<constructor-arg index="2" value="500000"></constructor-arg>
      </bean>
     
     <bean id = "customEventHandler" class = "CustomEventHandler"/>
   	<bean id = "customEventPublisher" class = "CustomEventPublisher"/>
</beans>
